<UserControl x:Class="SchoolManagementSystem.User_Controls.ReportUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolManagementSystem.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Report the issue you are facing to the manufacturer." HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <Label Content="Subject" HorizontalAlignment="Left" Margin="10,20,0,0"/>
            <TextBox Name="SubjectTextBox" Width="750" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
            <Label Content="Issue" HorizontalAlignment="Left" Margin="10,20,0,0"/>
            <TextBox Name="IssueTextBox" Width="750" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0,0,0"/>
            <Button x:Name="SubmitButton" Click="SubmitButton_Click" Content="Submit" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
